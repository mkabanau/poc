{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "declaration": true,
    "allowJs": true,
    "lib":["dom", "es2015"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true
